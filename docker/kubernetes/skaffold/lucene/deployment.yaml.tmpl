apiVersion: apps/v1
kind: Deployment
metadata:
  name: aether-lucene$APPID
  labels:
    app: aether-lucene$APPID
spec:
  replicas: 1
  selector:
    matchLabels:
      app: aether-lucene$APPID
  template:
    metadata:
      labels:
        app: aether-lucene$APPID
    spec:
      initContainers:
      - name: luceneinit
        image: aether-lucenedata$APPID
        command: ["/bin/sh", "-c", "cp -R /data/* /newdata/"]
        volumeMounts:
        - name: lucenedatavol
          mountPath: /newdata
      containers:
      - name: aether-lucene$APPID
        image: aether-lucene$IMGID
        ports:
        - containerPort: 80
        volumeMounts:
        - name: lucenedatavol
          mountPath: /data
      volumes:
      - name: lucenedatavol
        persistentVolumeClaim:
          claimName: lucenedatapv
---
apiVersion: v1
kind: Service
metadata:
  name: aether-lucene$APPID
  labels:
    app: aether-lucene$APPID
spec:
  type: NodePort
  ports:
  - port: 8080
    protocol: TCP
    targetPort: 8080
  selector:
    app: aether-lucene$APPID
  sessionAffinity: None  
status:
  loadBalancer: {}    
---
apiVersion: networking.k8s.io/v1
kind: IngressClass
metadata:
  labels:
    app.kubernetes.io/component: controller
  name: aether-lucene$APPID
  annotations:
    ingressclass.kubernetes.io/is-default-class: "false"
spec:
  controller: k8s.io/ingress-nginx
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: name-virtual-host-ingress-aether-lucene$APPID
spec:
  ingressClassName: aether-lucene$APPID
  rules:
  - host: $LUCENEHOST
    http:
      paths:
      - pathType: Prefix
        path: "/"
        backend:
          service:
            name: aether-lucene$APPID
            port:
              number: 8080
