apiVersion: skaffold/v2beta1
kind: Config
metadata:
  name: searchengine
build:
  artifacts:
  - image: aether-lucenedata$APPID
    context: ../../../docker/cloud/lucenedata
  - image: aether-lucene$IMGID
    context: ../../../docker/cloud/generic
    docker:
      buildArgs:
        distlib: '{{.DISTLIB}}'
        distjar: '{{.LUCENEJAR}}'
        mywebport: "8080"
        myconfig: '{{.MYCONFIG}}'
        mydebug: '{{.MYDEBUG}}'
  - image: aether-elastic$IMGID
    context: ../../../docker/cloud/generic
    docker:
      buildArgs:
        distlib: '{{.DISTLIB}}'
        distjar: '{{.ELASTICJAR}}'
        mywebport: "8080"
        myconfig: '{{.MYCONFIG}}'
        mydebug: '{{.MYDEBUG}}'
  - image: aether-solr$IMGID
    context: ../../../docker/cloud/generic
    docker:
      buildArgs:
        distlib: '{{.DISTLIB}}'
        distjar: '{{.SOLRJAR}}'
        mywebport: "8080"
        myconfig: '{{.MYCONFIG}}'
        mydebug: '{{.MYDEBUG}}'
deploy:
  kubectl:
    manifests:
    - lucene/deployment.yaml
    - lucenedata/deployment.yaml
    - elastic/deployment.yaml
    - solr/deployment.yaml
