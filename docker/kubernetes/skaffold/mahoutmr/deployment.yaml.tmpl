apiVersion: apps/v1
kind: Deployment
metadata:
  name: mahout-mr$APPID
  labels:
    app: mahout-mr$APPID
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mahout-mr$APPID
  template:
    metadata:
      labels:
        app: mahout-mr$APPID
    spec:
      initContainers:
      - name: mahout-mrinit
        image: aether-mahout-mrdata$APPID
        command: ["/bin/sh", "-c", "cp -R /data/* /newdata/"]
        volumeMounts:
        - name: mahout-mrdatavol
          mountPath: /newdata
      containers:
      - name: mahout-mr$APPID
        image: aether-mahout-mr$IMGID
        ports:
        - containerPort: 80
        volumeMounts:
        - name: mahout-mrdatavol
          mountPath: /data
      volumes:
      - name: mahout-mrdatavol
        persistentVolumeClaim:
          claimName: mahout-mrdatapv
---
apiVersion: networking.k8s.io/v1
kind: IngressClass
metadata:
  labels:
    app.kubernetes.io/component: controller
  name: aether-mahout-mr$APPID
  annotations:
    ingressclass.kubernetes.io/is-default-class: "false"
spec:
  controller: k8s.io/ingress-nginx
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: name-virtual-host-ingress-aether-mahout-mr$APPID
spec:
  ingressClassName: aether-mahout-mr$APPID
  rules:
  - host: $MAHOUTMRIHOST
    http:
      paths:
      - pathType: Prefix
        path: "/"
        backend:
          service:
            name: aether-mahout-mr$APPID
            port:
              number: 8080
